// Массив с ответами Магического Шара
const magicBallAnswers = [
  "Бесспорно",
  "Предрешено",
  "Никаких сомнений",
  "Определённо да",
  "Можешь быть уверен в этом",
  "Мне кажется — да",
  "Вероятнее всего",
  "Хорошие перспективы",
  "Знаки говорят — да",
  "Да",
  "Пока не ясно, попробуй снова",
  "Спроси позже",
  "Лучше не рассказывать",
  "Сейчас нельзя предсказать",
  "Сконцентрируйся и спроси опять",
  "Даже не думай",
  "Мой ответ — нет",
  "По моим данным — нет",
  "Перспективы не очень хорошие",
  "Весьма сомнительно"
];

// Функция для получения случайного ответа Магического Шара
function getMagicBallAnswer() {
  const randomIndex = Math.floor(Math.random() * magicBallAnswers.length);
  return magicBallAnswers[randomIndex];
}

// Функция для задания вопроса Магическому Шару и получения ответа
function askMagicBall(question) {
  console.log(`Ты: ${question}`);
  console.log("Магический Шар размышляет...");
  console.log("Магический Шар: " + getMagicBallAnswer());
}

// Пример использования
askMagicBall("Будет ли у меня удача сегодня?");
askMagicBall("Стоит ли мне пойти на вечеринку?");
askMagicBall("Я смогу достичь своих целей?");
